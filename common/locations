# Block dotfiles/dirs except for .well-known
location ~ /\.(?!well-known/) {
    include servers.d/common/block;
}

# Block direct access to Composer libraries
location ~ /vendor/.+\.php(?:/|$) {
    include servers.d/common/block;
}

# For crawlers
location = /robots.txt {
    allow all;
    access_log off;
    log_not_found off;
}

location = /favicon.ico {
    access_log off;
    log_not_found off;
}
