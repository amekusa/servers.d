# Deny dotfiles/dirs except for .well-known
location ~ /\.(?!well-known/) {
    deny all;
    access_log off;
    log_not_found off;
}

# For crawlers
location = /robots.txt {
    allow all;
    access_log off;
    log_not_found off;
}

location = /favicon.ico {
    access_log off;
    log_not_found off;
}
