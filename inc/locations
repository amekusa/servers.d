# Assets
location ~* [^/]\.(?:js|css|ico|svg|png|jpe?g|gif|woff2?|otf|ttf|webp)$ {
    valid_referers none server_names;
    if ($invalid_referer) {
        return 403;
    }
    limit_req zone=req_asset burst=64 nodelay;
    expires 3d;
    access_log off;
    log_not_found off;
}

# For crawlers
location = /robots.txt {
    access_log off;
    log_not_found off;
}
